              <span class="exhibition-year"><%= exhibition.year %></span>
              <span class="exhibition-title"><%= exhibition.title %></span>
              <span class="exhibition-place"><%= exhibition.place %></span>
              <span class="exhibition-city"><%= exhibition.city %></span>
            </p>
          </div>
        <% end %>
      </div>
      <div class="exhibitions-hidden collapse" id="hidden-personnal-exhibitions">
        <% @personal_exhibitions.each do |exhibition| %>
          <div class="exhibition">
