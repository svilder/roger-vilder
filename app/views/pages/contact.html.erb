              <span class="exhibition-year"><%= exhibition.year %></span>
              <span class="exhibition-title"><%= exhibition.title %></span>
              <span class="exhibition-place"><%= exhibition.place %></span>
              <span class="exhibition-city"><%= exhibition.city %></span>
            </p>
          </div>
        <% end %>
      </div>
      <div class="btn btn-warning" id="button-show-personnal" data-toggle="collapse" data-target="#hidden-personnal-exhibitions" aria-expanded="false" aria-controls="hidden-personnal-exhibitions"> click me honey!</div>
    </div>

  </div>


