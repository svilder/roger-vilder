<div class="container-with-navbar">
  <div class="wrapper">
    <div class="my-cards">
      <% @works.each do |work| %>
        <%= link_to work_path( locale: I18n.locale, id: work.id) do %>
          <div class="my-card">
            <%= instance_image_tag work.photo, height: 150, width: 150, crop: :fill, class: "my-card-image" %>
            <div class="my-card-details">
              <!-- <p><%= work.name %></p>
              <p><%= work.year %></p> -->
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="one-work-card">
      <div class="work-card">
        <% if @work.category == "Kinetics" %>
          <div class="video">
            <%= youtube_video @work.youtube_link, @height, @width %>
          </div>
        <% else %>
          <%= instance_image_tag @work.photo, height: 350, width: 350, crop: :fill, class: "work-card-image" %>
        <% end %>
        <div class="work-description">
          <div class="name-year">
            <p><%= @work.name %></p>
            <p><%= @work.year %></p>
          </div>
          <p><%= @work.dimensions %></p>
          <p><%= @work.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
